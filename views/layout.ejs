<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website Bình Chọn Đề Cử</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Global CSS removed to avoid conflicts with login/register pages -->
    <style>
        body {
            font-size: 19px;
            margin: 0;
            padding: 0;
        }
        .navbar-brand {
            font-size: 2.8rem;
            font-weight: bold;
        }
        .nav-link {
            font-size: 1.8rem;
            padding: 0.5rem 0.8rem !important;
            white-space: nowrap;
        }
        .footer h5 {
            font-size: 2.5rem;
        }
        .footer p {
            font-size: 2.3rem;
        }
        .alert {
            font-size: 2.2rem;
        }
        .dropdown-item {
            font-size: 2.2rem;
        }
        .dropdown-item-text {
            font-size: 2.1rem;
        }
        
        /* Tăng lề cho toàn bộ website */
        .container {
            max-width: 2000px !important;
            padding-left: 8rem !important;
            padding-right: 8rem !important;
        }
        
        /* Tăng lề cho navigation */
        .navbar .container {
            padding-left: 6rem !important;
            padding-right: 6rem !important;
        }
        
        /* Responsive navigation */
        .navbar-nav {
            flex-wrap: nowrap !important;
            overflow-x: auto !important;
        }
        
        .navbar-nav::-webkit-scrollbar {
            display: none;
        }
        
        .navbar-nav {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        
        /* Responsive adjustments */
        @media (max-width: 1400px) {
            .nav-link {
                font-size: 1.6rem !important;
                padding: 0.4rem 0.6rem !important;
            }
            .navbar-brand {
                font-size: 2.4rem !important;
            }
        }
        
        @media (max-width: 1200px) {
            .nav-link {
                font-size: 1.4rem !important;
                padding: 0.3rem 0.5rem !important;
            }
            .navbar-brand {
                font-size: 2.2rem !important;
            }
        }
        
        @media (max-width: 992px) {
            .navbar-nav {
                flex-direction: column !important;
                overflow-x: visible !important;
            }
            .nav-link {
                font-size: 1.8rem !important;
                padding: 0.5rem 1rem !important;
            }
        }
        
        /* Tăng lề cho main content */
        main {
            padding-left: 6rem !important;
            padding-right: 6rem !important;
        }
        
        /* Tăng lề cho các section */
        .py-5 {
            padding-top: 6rem !important;
            padding-bottom: 6rem !important;
        }
        
        /* Tăng lề cho cards */
        .card {
            margin: 2rem !important;
            border-radius: 1.5rem !important;
        }
        
        .card-body {
            padding: 3rem !important;
        }
        
        /* Tăng lề cho hero section */
        .hero-section {
            padding: 6rem 0 !important;
        }
        
        /* Tăng lề cho nomination cards */
        .nomination-card {
            margin-bottom: 3rem !important;
        }
        
        /* Tăng lề cho form elements */
        .form-control {
            margin-bottom: 2rem !important;
        }
        
        /* Tăng lề cho buttons */
        .btn {
            margin: 1rem !important;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="d-flex justify-content-between w-100 align-items-center">
                <!-- Left side - Logo and Home -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand me-3" href="/">
                        <i class="fas fa-vote-yea me-2"></i>Bình Chọn Đề Cử
                    </a>
                    <a class="nav-link" href="/">Trang Chủ</a>
                </div>
                
                <!-- Right side - Login/Register or User menu -->
                <div class="d-flex align-items-center">
                    <% if (user) { %>
                        <div class="dropdown me-2">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-1"></i><%= user.username %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><span class="dropdown-item-text text-muted">Vai trò: <%= user.role === 'admin' ? 'Quản trị viên' : 'Người dùng' %></span></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                        <a class="nav-link me-2" href="/results">Kết Quả</a>
                        <% if (user.role === 'admin') { %>
                            <a class="nav-link me-2" href="/admin">Quản Lý</a>
                            <a class="nav-link me-2" href="/manage-categories">Tạo Danh Mục</a>
                            <a class="nav-link me-2" href="/suggestions">Góp Ý</a>
                            <a class="nav-link me-2" href="/trash">Lịch Sử Xóa</a>
                        <% } else { %>
                            <a class="nav-link me-2" href="/suggest-nomination">Đề Cử Thêm</a>
                            <a class="nav-link me-2" href="/feedback">Góp Ý</a>
                        <% } %>
                    <% } else { %>
                        <a class="nav-link me-2" href="/login">Đăng nhập</a>
                        <a class="nav-link" href="/register">Đăng ký</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (typeof messages !== 'undefined' && messages.error) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= messages.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    <% if (typeof messages !== 'undefined' && messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <%= messages.success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
